{
    "name": "protonemedia/laravel-verify-new-email",
    "description": "Package to handle email address updates and verification",
    "keywords": [
        "protonemedia",
        "laravel-verify-new-email"
    ],
    "homepage": "https://github.com/protonemedia/laravel-verify-new-email",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pascal Baljet",
            "email": "pascal@protone.media",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "illuminate/support": "^9.0|^10.0"
    },
    "require-dev": {
        "nesbot/carbon": "^2.66",
        "orchestra/testbench": "^7.0|^8.0",
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "psr-4": {
            "ProtoneMedia\\LaravelVerifyNewEmail\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProtoneMedia\\LaravelVerifyNewEmail\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "ProtoneMedia\\LaravelVerifyNewEmail\\ServiceProvider"
            ]
        }
    }
}